{
  "name": "tz3-backend",
  "version": "1.0.0",
  "description": "Backend for TZ3 at https://maxpfrontend.ru/",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "./node_modules/.bin/nodemon index.js",
    "test": "NODE_ENV=test jest --forceExit --detectOpenHandles --runInBand",
    "test:watch": "NODE_ENV=test jest --detectOpenHandles --forceExit --watch --runInBand",
    "lint": "./node_modules/eslint/bin/eslint.js src/"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/?(*.)+(spec).js?(x)"
    ],
    "setupTestFrameworkScriptFile": "./test/setup.js"
  },
  "license": "MIT",
  "dependencies": {
    "axios": "^0.18.0",
    "babel-core": "^6.5.1",
    "babel-polyfill": "^6.5.0",
    "babel-preset-es2015-node5": "^1.2.0",
    "babel-preset-stage-0": "^6.5.0",
    "bcryptjs": "^2.4.3",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^5.0.1",
    "eslint-plugin-react": "^7.0.0",
    "jsonwebtoken": "^8.4.0",
    "koa": "^2.0.0-alpha.6",
    "koa-bodyparser": "^3.0.0",
    "koa-convert": "^1.2.0",
    "koa-cors": "^0.0.16",
    "koa-generic-session": "^1.10.1",
    "koa-logger": "^3.2.0",
    "koa-multer": "^1.0.2",
    "koa-passport": "^2.0.1",
    "koa-router": "^7.0.1",
    "mongoose": "^4.4.3",
    "nodemon": "^1.11.0",
    "passport-local": "^1.0.0",
    "recaptcha-validator": "^2.0.0",
    "yarn": "^0.24.6"
  },
  "devDependencies": {
    "babel-eslint": "^6.0.2",
    "babel-register": "^6.5.1",
    "eslint": "^3.4.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-config-react-app": "^3.0.5",
    "eslint-config-standard": "^6.0.0",
    "eslint-plugin-flowtype": "^3.2.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-standard": "^2.0.0",
    "husky": "^1.1.3",
    "jest": "^23.2.0",
    "lint-staged": "^8.0.4",
    "prettier": "^1.15.1",
    "request": "^2.58.0",
    "supertest": "^3.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "node_modules/.bin/eslint --max-warnings=0",
      "prettier --write",
      "git add"
    ]
  }
}
